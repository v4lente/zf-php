				    "NO_TRANSACAO" => array("width"=>00, "text-align"=>'left',   "title"=>"Transao", "group" => true),                
				    "NO_USUARIO"   => array("width"=>40, "text-align"=>'left',   "title"=>"Usurio"),
    				"NO_ACAO"      => array("width"=>40, "text-align"=>'left',   "title"=>"Aes"),
                    "PERIODO"      => array("width"=>20, "text-align"=>'center', "title"=>"Perodo de Acesso"));
} else {
    
    // Define o ttulo
    $titulo = "Acesso Usurios por Transao";
    
    // Monta o array com os campos da consulta que sero mostrados no relatrio. -> (Obrigatrio)
    // Total 190 mm somando todos os campos para A4 tipo Retrato (P: Portrait)
    // ou 277 mm somando todos os campos para A4 tipo Paisagem (L: Landscape)
    // No WIDTH colocar a porcentagem de cada campo, mximo 100% de todos os campos juntos.
    $campos = array("NO_USUARIO"   => array("width"=>00, "text-align"=>'left',   "title"=>"Usurio", "group" => true),
    			    "NO_SISTEMA"   => array("width"=>00, "text-align"=>'left',   "title"=>"Sistema", "group" => true),
    				"NO_TRANSACAO" => array("width"=>40, "text-align"=>'left',   "title"=>"Transao"),
    				"NO_ACAO"      => array("width"=>40, "text-align"=>'left',   "title"=>"Aes"),
                    "PERIODO"      => array("width"=>20, "text-align"=>'center', "title"=>"Perodo de Acesso"));
    
}

// Chama o view helper que gerar o relatrio
$this->geraRelatorio($res, $titulo, $campos, $this->extraParams["_rel_metodo"]);
